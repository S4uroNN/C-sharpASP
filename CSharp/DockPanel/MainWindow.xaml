<Window x:Class="DockPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DockPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel LastChildFill="True">
            <Button x:Name="btnLeft"  Content="Left" DockPanel.Dock="Left" Width="40"/>
            <Button x:Name="btnRight" Content="Right" DockPanel.Dock="Right" Width="40"/>
            <Button x:Name="btnUp" Content="Up" DockPanel.Dock="Top" Height="50" Click="btnUp_Click_1"/>
            <Button x:Name="btnDown" Content="Down" DockPanel.Dock="Bottom" Height="50"/>
            <TextBox x:Name="txtBox1" TextWrapping="Wrap" Text="" HorizontalContentAlignment="Center"/>
        </DockPanel>

    </Grid>
</Window>
